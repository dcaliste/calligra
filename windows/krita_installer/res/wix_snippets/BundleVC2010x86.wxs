<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
		<!-- Test environment variables to determine which build type we want
			 i.e. with VS2010 DLLs, Merge Modules or a simple warning
			-->
		<?if $(env.C2WINSTALL_VC2010_DISTRIBUTE) = DLL ?>
			 <?warning Distributing VC2010 DLLs?>
			<?include VC2010DLLs.wxi ?>
		<?elseif $(env.C2WINSTALL_VC2010_DISTRIBUTE) = MSM ?>
			<?warning Distributing VC2010 Merge Module?>
			<?include MergeModules.wxi ?>
		<?else ?>
			<!-- User does not have rights to distribute, test for presence and display error -->
			<?warning Using VC2010 Runtime Test and Warning only?>
			<?include FindVC2010x86.wxi ?>
		<?endif ?>
		<ComponentGroup Id="CG.VC2010_Support" />
	</Fragment>
</Wix>